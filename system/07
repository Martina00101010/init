systemctl status ssh | grep 'PID' | awk '{print$3}'

#
#	or '''cat /var/run/sshd.pid'''
#	ssh is client. use it to connect to remote machines
#	sshd is server. it is a daemon (runnning on remote machine)
#		that allows to connect to maching
